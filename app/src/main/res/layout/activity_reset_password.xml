<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_margin="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="48dp"

            tools:layout_editor_absoluteX="465dp"
            tools:layout_editor_absoluteY="66dp">

            <TextView
                android:id="@+id/email_label1234"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:paddingLeft="4dp"
                android:text="Email ID"
                android:textColor="#000000"

                android:textSize="16sp"

                />

            <EditText
                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/email_reset"
                android:inputType="textPersonName"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/email_label1234"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:backgroundTint="@color/vote_color"
                />







            <Button

                android:focusableInTouchMode="true"
                android:focusable="true"

                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/email_reset"
                android:layout_centerHorizontal="true"

                android:backgroundTint="@color/indigo"

                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_marginTop="32dp"

                android:text="Reset Password"
                android:textSize="20sp"
                android:textColor="#FFFFFF"

                />


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>